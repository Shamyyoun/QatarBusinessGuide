<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/clickable_item"
    android:orientation="vertical"
    android:layout_width="@dimen/services_categories_item_width"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/services_categories_item_padding">

    <views.ResizableImageView
        android:src="@drawable/service_cat1_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_thumbnail" />

    <TextView
        android:id="@+id/text_title"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/white"
        android:text="وزارارت"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>