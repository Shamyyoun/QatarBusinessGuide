<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:paddingLeft="@dimen/tab_text_padding"
        android:paddingRight="@dimen/tab_text_padding"
        android:background="@drawable/tab_red_item"
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/organizations"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/title_dimen" />

    <View
        android:id="@+id/view_seperator"
        android:layout_width="1dp"
        android:layout_height="@dimen/tabs_seperator_height"
        android:background="@color/light_red" />

</LinearLayout>